<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:jdbc="http://www.springframework.org/schema/jdbc"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
	   					   http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
        				   http://www.springframework.org/schema/jdbc
        				   http://www.springframework.org/schema/jdbc/spring-jdbc-4.3.xsd">

	<!-- ============================================================================== -->
	<!-- Datasource 설정 -->
	<!-- ============================================================================== -->
	<bean id="mainDataSource" class="org.apache.commons.dbcp.BasicDataSource">
		<property name="driverClassName" value="core.log.jdbc.driver.OracleDriver" />
		<property name="url" value="jdbc:oracle:thin:@211.252.87.18:1521:ORCL"/>
		<property name="username" value="LK_EDU" />
		<property name="password" value="LK_EDU1!" />
		<property name="maxActive" value="50"/>
        <property name="maxIdle" value="50"/>
        <property name="maxWait" value="10000"/>
	</bean>
	
	<!-- ============================================================================== -->
	<!--  sqlSessionFactory -->
	<!-- ============================================================================== -->
    <bean id="sqlSessionFactory" class="com.core.sql.RefreshableSqlSessionFactoryBean">
		<property name="dataSource" ref="mainDataSource"/>
		<property name="mapperLocations" value="classpath:/com/kmp/**/sql/*.sqlx"/>
		<property name="configLocation"  value="classpath:/config/mapper/sql-mapper-config.xml"/>
	</bean>
	
	<!-- ============================================================================== -->
	<!-- SqlSession 설정 -->
	<!-- ============================================================================== -->
	<bean id="sqlSession" class="org.mybatis.spring.SqlSessionTemplate">
		<constructor-arg index="0" ref="sqlSessionFactory"/>
	</bean>
	
    
</beans>